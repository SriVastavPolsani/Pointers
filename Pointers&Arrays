// Ponters and Arrays program
#include <iostream>
#include <string>

int main()
{
    int A[] = {2,4,5,8,1};
    
    for(int i =0; i < 5; i++)
    {
    printf("Address: %d\n", &A[i]); //Address of element i
    printf("Address: %d\n", A+i); //Another way of calling address of element i. A can be used to get address of base element.
    printf("Value: %d\n", A[i]); //value of element at i
    printf("value: %d\n", *(A+i)); //Value of element at i using dereferencing.
    }
       
}
